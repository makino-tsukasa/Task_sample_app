<% provide(:title, 'New Task') %>

<h1>タスク新規作成</h1>

<div class="row">
  <%= form_with(model: @task, url: user_tasks_path(@user), local: true) do |f| %>
    <%= render partial: 'shared/error_messages', locals: { obj: @task } %>
  
    <%= f.label :name, class: "label-form" %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :content, class: "label-form" %>
    <%= f.text_area :content, rows: 5, class: "form-control" %>
  
    <%= f.submit "新規作成", class: "btn btn-primary btn-lg" %>
  <% end %>  
</div>
